<main
  class="card shadow-xl max-w-screen-md mx-auto mt-24 bg-neutral text-neutral-content"
>
  <form class="card-body form-control flex gap-2" method="POST" action="/auth/login">
    <h1 class="text-3xl">Login</h1>

    {{#if error}}
    <div role="alert" class="alert alert-error">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 stroke-current"
        fill="none"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>Pengguna tidak ditemukan!</span>
    </div>
    {{/if}}

    <label class="form-control">
      <div class="label">
        <span class="label-text">No HP</span>
      </div>
      <input name="phone" type="text" class="input input-bordered bg-neutral" />
    </label>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Password</span>
      </div>
      <input
        name="password"
        type="password"
        class="input input-bordered bg-neutral"
      />
    </label>

    <div class="card-actions justify-end">
      <button class="btn btn-primary">Login</button>
    </div>
  </form>
</main>
