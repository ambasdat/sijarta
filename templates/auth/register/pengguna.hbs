<main
  class="card shadow-xl max-w-screen-md mx-auto mt-24 bg-neutral text-neutral-content"
>
  <form class="card-body form-control flex gap-2" method="POST">
    <h1 class="text-3xl">Registrasi Pengguna</h1>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Nama</span>
      </div>
      <input required name="nama" type="text" class="input input-bordered bg-neutral" />
    </label>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Password</span>
      </div>
      <input
        required
        name="password"
        type="password"
        class="input input-bordered bg-neutral"
      />
    </label>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Jenis Kelamin</span>
      </div>
      <div>
        <input type="radio" name="jenisKelamin" id="l" value="L" />
        <label for="l">Laki-laki</label>
      </div>
      <div>
        <input type="radio" name="jenisKelamin" id="p" value="P" />
        <label for="p">Perempuan</label>
      </div>
    </label>

    <label class="form-control">
      <div class="label">
        <span class="label-text">No HP</span>
      </div>
      <input required name="phone" type="text" class="input input-bordered bg-neutral" />
    </label>

    {{#if phoneExists}}
    <div role="alert" class="alert alert-error rounded-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 stroke-current"
        fill="none"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>No HP sudah terdaftar!</span>
      <div>
        <a class="btn btn-sm btn-ghost" href="/auth/login">Login</a>
      </div>
    </div>
    {{/if}}

    <label class="form-control">
      <div class="label">
        <span class="label-text">Tanggal Lahir</span>
      </div>
      <input required name="dob" type="text" class="input input-bordered bg-neutral" />
    </label>

    <label class="form-control">
      <div class="label">
        <span class="label-text">Alamat</span>
      </div>
      <input
        required
        name="address"
        type="text"
        class="input input-bordered bg-neutral"
      />
    </label>

    <div class="card-actions justify-end">
      <button class="btn btn-primary">Registrasi</button>
    </div>
  </form>
</main>
