<main class="max-w-screen-xl mx-auto p-6 space-y-8">
  {{! Voucher Section }}
  <section>
    <h2 class="text-2xl font-bold mb-4">Voucher</h2>
    <div class="overflow-x-auto h-[300px]">
      <table class="table table-zebra">
        <thead class="sticky top-0 bg-base-200">
          <tr>
            <th>Kode</th>
            <th>Potongan</th>
            <th>Min. Transaksi</th>
            <th>Berlaku</th>
            <th>Kuota</th>
            <th>Harga</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          {{#each vouchers}}
            <tr>
              <td class="font-medium">{{this.Kode}}</td>
              <td>Rp {{this.Potongan}}</td>
              <td>Rp {{this.MinTrPemesanan}}</td>
              <td>{{this.JmlHariBerlaku}} hari</td>
              <td>{{this.KuotaPenggunaan}}x</td>
              <td>Rp {{this.Harga}}</td>
              <td>
                <button
                  class="btn btn-primary btn-sm"
                  onclick="document.getElementById('modal_{{this.Kode}}').showModal()"
                >
                  Beli
                </button>

                {{!-- <dialog --}}
                {{!--   id="modal_{{this.Kode}}" --}}
                {{!--   class="modal modal-bottom sm:modal-middle" --}}
                {{!-- > --}}
                {{!--   <div class="modal-box text-center"> --}}
                {{!--     <h3 class="font-bold text-2xl mb-4">SUKSES</h3> --}}
                {{!--     <p> --}}
                {{!--       Voucher ini akan berlaku hingga tanggal --}}
                {{!--       {{this.JmlHariBerlaku}} --}}
                {{!--       dengan kuota penggunaan sebanyak --}}
                {{!--       {{this.KuotaPenggunaan}} --}}
                {{!--       kali. --}}
                {{!--     </p> --}}
                {{!--     <div class="modal-action justify-center"> --}}
                {{!--       <form method="dialog"> --}}
                {{!--         <button class="btn btn-primary">Tutup</button> --}}
                {{!--       </form> --}}
                {{!--     </div> --}}
                {{!--   </div> --}}
                {{!-- </dialog> --}}

                <dialog
                  id="modal_{{this.Kode}}"
                  class="modal modal-bottom sm:modal-middle"
                >
                  <div class="modal-box text-center">
                    <h3 class="font-bold text-2xl mb-4">GAGAL</h3>
                    <p>
                      Maaf, saldo Anda tidak cukup untuk membeli voucher ini.
                    </p>
                    <div class="modal-action justify-center">
                      <form method="dialog">
                        <button class="btn btn-primary">Tutup</button>
                      </form>
                    </div>
                  </div>
                </dialog>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>

  {{! Promo Section }}
  <section>
    <h2 class="text-2xl font-bold mb-4">Promo</h2>
    <div class="overflow-x-auto h-[250px]">
      <table class="table table-zebra">
        <thead class="sticky top-0 bg-base-200">
          <tr>
            <th>Kode</th>
            <th>Berlaku Sampai</th>
          </tr>
        </thead>
        <tbody>
          {{#each promos}}
            <tr>
              <td class="font-medium">{{this.Kode}}</td>
              <td>{{this.TglAkhirBerlaku}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
</main>
