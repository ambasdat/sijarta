<main
  class="card shadow-xl max-w-screen-md mx-auto mt-24 bg-neutral text-neutral-content"
>
  <div class="card-body">
    <h2 class="card-title text-3xl font-bold">{{ pelanggan.Nama }}</h2>
    <div class="mt-4">
      <p><strong>Level:</strong> {{ pelanggan.Level }}</p>
      <p><strong>Jenis Kelamin:</strong> {{ pelanggan.JenisKelamin }}</p>
      <p><strong>No HP:</strong> {{ pelanggan.NoHP }}</p>
      <p><strong>Tanggal Lahir:</strong> {{ pelanggan.TglLahir }}</p>
      <p><strong>Alamat:</strong> {{ pelanggan.Alamat }}</p>
      <p><strong>Saldo MyPay:</strong> Rp{{ pelanggan.SaldoMyPay }}</p>
    </div>

    <div class="card-actions justify-end mt-4">
      <button
        class="btn btn-primary"
        onclick="updateModal.showModal()"
      >Update</button>
    </div>

    <dialog id="updateModal" class="modal">
      <div class="modal-box" method="POST" onsubmit="console.log('update!')">
        <form method="dialog">
          <button
            class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
          >âœ•</button>
        </form>

        <form method="POST">
          <h3 class="text-xl font-bold">Update Data</h3>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Nama</span>
            </div>
            <input
              value="{{ pelanggan.Nama }}"
              name="nama"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Jenis Kelamin</span>
            </div>
            <div>
              <input
                {{#if (eq pelanggan.JenisKelamin "L")}}checked{{/if}}
                type="radio"
                name="jenisKelamin"
                id="l"
                value="L"
              />
              <label for="l">Laki-laki</label>
            </div>
            <div>
              <input
                {{#if (eq pelanggan.JenisKelamin "P")}}checked{{/if}}
                type="radio"
                name="jenisKelamin"
                id="p"
                value="P"
              />
              <label for="p">Perempuan</label>
            </div>
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">No HP</span>
            </div>
            <input
              name="phone"
              type="text"
              class="input input-bordered bg-neutral"
              value="{{ pelanggan.NoHP }}"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Tanggal Lahir</span>
            </div>
            <input
              name="dob"
              type="text"
              class="input input-bordered bg-neutral"
              value="{{ pelanggan.TglLahir }}"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Alamat</span>
            </div>
            <input
              name="address"
              type="text"
              class="input input-bordered bg-neutral"
              value="{{ pelanggan.Alamat }}"
            />
          </label>

          <div class="modal-action">
            <button class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </dialog>
  </div>
</main>
