<main
  class="card shadow-xl max-w-screen-md mx-auto mt-24 bg-neutral text-neutral-content"
>
  <div class="card-body">
    <h2 class="card-title text-3xl font-bold">Okarun</h2>
    <div class="mt-4 grid grid-cols-3">
      <img
        src="https://i.kym-cdn.com/photos/images/newsfeed/002/925/412/9d1.jpeg"
        alt="Profile Picture"
        class="rounded-full m-6 w-32 h-32 border-4 border-primary"
      />

      <div>
        <p><strong>Jenis Kelamin:</strong> Laki-laki</p>
        <p><strong>No HP:</strong> 081234567890</p>
        <p><strong>Tanggal Lahir:</strong> 20/02/2020</p>
        <p><strong>Alamat:</strong> Depok</p>
        <p><strong>Saldo MyPay:</strong> Rp120000</p>
        <p><strong>Nama Bank:</strong> BECEA</p>
        <p><strong>No Rekening:</strong> 123</p>
      </div>

      <div>
        <p><strong>NPWP:</strong> 5</p>
        <p><strong>Rating:</strong> 5</p>
        <p><strong>Kategori Pekerjaan:</strong></p>
        <ol class="list-decimal ml-4">
          <li>Kategori Jasa 1</li>
          <li>Kategori Jasa 2</li>
        </ol>
      </div>
    </div>

    <div class="card-actions justify-end mt-4">
      <button
        class="btn btn-primary"
        onclick="updateModal.showModal()"
      >Update</button>
    </div>

    <dialog id="updateModal" class="modal">
      <div class="modal-box" method="POST" onsubmit="console.log('update!')">
        <form method="dialog">
          <button
            class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
          >âœ•</button>
        </form>

        <form>
          <h3 class="text-xl font-bold">Update Data</h3>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Nama</span>
            </div>
            <input
              name="nama"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Jenis Kelamin</span>
            </div>
            <div>
              <input type="radio" name="jenisKelamin" id="l" />
              <label for="l">Laki-laki</label>
            </div>
            <div>
              <input type="radio" name="jenisKelamin" id="p" />
              <label for="p">Perempuan</label>
            </div>
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">No HP</span>
            </div>
            <input
              name="phone"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Tanggal Lahir</span>
            </div>
            <input
              name="dob"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Alamat</span>
            </div>
            <input
              name="address"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">Nama Bank</span>
            </div>
            <select name="bank" class="select select-bordered bg-neutral">
              <option disabled selected>-- Pilih Bank --</option>
              <option>GoPay</option>
              <option>OVO</option>
              <option>Virtual Account BCA</option>
              <option>Virtual Account BNI</option>
              <option>Virtual Account Mandiri</option>
            </select>
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">No Rekening</span>
            </div>
            <input
              name="norek"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">NPWP</span>
            </div>
            <input
              name="npwp"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <label class="form-control">
            <div class="label">
              <span class="label-text">URL Foto</span>
            </div>
            <input
              name="url"
              type="text"
              class="input input-bordered bg-neutral"
            />
          </label>

          <div class="modal-action">
            <button class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </dialog>
  </div>
</main>